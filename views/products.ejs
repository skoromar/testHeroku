<% include header %>



<% if(products && products.length > 0) { %>
<div class="w3-container  cart-component">
<% var i = 0; products.forEach(function(product) { i++; %>
    <form action="/cart" method="post">
    <div class="w3-col l4 s12">
      <div class="w3-container">
        <div class="w3-display-container">
          <img src="/public/images/products/<%= product.image %>" style="width:100%">
          <!-- <span class="w3-tag w3-display-topleft">New</span> -->
          <div class="w3-display-middle w3-display-hover">
            <button class="w3-button w3-black">Comprar ahora <i class="fa fa-shopping-cart"></i></button>
          </div>
        </div>
        <p><%= product.title %><br><b class="price"><%= product.formattedPrice %></b></p>
        <!-- <span class="qty-wrap">
            <span class="qty-minus"><i class="fa fa-minus"></i></span>
            <input type="hidden" name="qty" class="qty" value="1">
            <span class="qty-plus"><i class="fa fa-plus"></i></span>
        </span> -->
        <input type="hidden" name="qty" class="qty" value="1">
        <input type="hidden" name="product_id" value="<%= product.id %>">
        <input type="hidden" name="nonce" value="<%= nonce %>">
       
      </div>
    </div>
    </form>
    
    <% if(i % 3 === 0) {%><div class="clearfix"></div><% } %>
<% }); %>
</div>
<% } else { %>
    <p class="alert alert-info">Lo sentimos, no hay productos en este momento.</p>
<% } %>


<div class="w3-container w3-text-grey" id="jeans">
    <p>8 items</p>
  </div>

<% include footer %>